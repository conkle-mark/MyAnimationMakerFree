<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/accentCyan"
    android:orientation="vertical">
    <TextView
        android:id="@+id/write_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="@string/write_title_text"
        android:textColor="@color/primaryCyan"
        android:gravity="center"
        android:background="@color/primaryCyanDarker"/>
    <TextView
        android:id="@+id/write_directory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp">
    </TextView>
    <TextView
        android:id="@+id/write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/write_project">
    </TextView>

</LinearLayout>