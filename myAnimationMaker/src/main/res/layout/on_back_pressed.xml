<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accentCyan"
    android:orientation="vertical">
    <TextView
        android:id="@+id/on_back_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="@string/on_back_pressed_title_text"
        android:textColor="@color/primaryCyan"
        android:gravity="center"
        android:background="@color/primaryCyanDarker"/>
    <TextView
        android:id="@+id/on_back_body"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="@string/on_back_pressed_body_text"
        android:textSize="16sp">
    </TextView>
</LinearLayout>